// datasource and generator
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// models
model ContactSubmission {
  id           Int      @id @default(autoincrement())
  name         String
  email        String
  phone        String
  countryCode  String
  category     String
  subCategory  String
  subject      String?
  message      String
  createdAt    DateTime @default(now())
}
